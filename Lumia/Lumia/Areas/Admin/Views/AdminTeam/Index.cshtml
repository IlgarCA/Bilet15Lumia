@model List<Employee>

@{
    ViewData["Title"] = "AdminTeam";
}

<div class="main-panel">
    <div class="content-wrapper">
        <div class="row">
            <div class="col-lg-12 grid-margin stretch-card">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Team border</h4>
                        <a class="btn btn-danger sm-2" asp-action="Create">
                            <i class="mdi mdi-table-edit"></i>
                        </a>
                        <div class="table-responsive pt-3">
                            <table class="table table-bordered">
                                <thead>
                                    <tr>
                                        <th>
                                            Avatar
                                        </th>
                                        <th>
                                            FullName
                                        </th>
                                        <th>
                                            Profession
                                        </th>
                                        <th>
                                            Bio
                                        </th>
                                        <th>
                                            Twitter
                                        </th>
                                        <th>
                                            Facebook
                                        </th>
                                        <th>
                                            Instagram
                                        </th>
                                        <th>
                                            Linkedin
                                        </th>
                                        <th>
                                            Setting
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (Employee employee in Model)
                                    {
                                        <tr>
                                            <td class="py-1">
                                                <img src="~/assets/img/team/@employee.Img" alt="image" />
                                            </td>
                                            <td>
                                                @employee.FullName
                                            </td>
                                            <td>
                                                @employee.Professian
                                            </td>
                                            <td>
                                                @employee.Bio
                                            </td>
                                            <td>
                                                @employee.Twitter
                                            </td>
                                            <td>
                                                @employee.Facebook
                                            </td>
                                            <td>
                                                @employee.Instagram
                                            </td>
                                            <td>
                                                @employee.Linkedin
                                            </td>
                                            <td>
                                                <a class="btn btn-primary sm-2" asp-action="Update" asp-route-id="@employee.Id">
                                                    <i class="mdi mdi-account-edit"></i>
                                                </a>
                                                <a class="btn btn-danger sm-2" asp-action="Delete" asp-route-id="@employee.Id" >
                                                    <i class="mdi mdi-delete"></i>
                                                </a>
                                            </td>

                                        </tr>

                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
